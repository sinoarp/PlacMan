  <body>
    <nav id="topbar" class="navbar navbar-expand-md sticky-top">
      <!-- sidebar toggle button -->
      <button
        id="topbar-toggler"
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
      >
        <span class="fas fa-align-left"></span>
      </button>
      <!-- topbar items toggle button -->
      <button
        class="navbar-toggler collapsed"
        type="button"
        data-toggle="collapse"
        data-target="#topbar-items"
      >
        <span class="fas fa-ellipsis-v"></span>
      </button>
      <!-- topbar items -->
      <div class="navbar-collapse collapse" id="topbar-items">
        <div class="container">
          <a class="navbar-brand" href="/home">
            <img src="/img/cap.png" alt="PlacMan Logo" loading="lazy" />
            PLACMAN
          </a>
        </div>
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link waves-effect waves-light" href="#">
              <i class="fa fa-envelope"></i>
              <span>Contact</span>
            </a>
          </li>
        </ul>
      </div>
    </nav>

    <div id="content" class="content">
      <h1 class="big-heading">Company signup</h1>
      <h4 class="subtitle">Fill in your details.</h4>

      <form
        class="w-75"
        action="/student/signup"
        method="POST"
        enctype="multipart/form-data"
      >
          
           <input class="form-control mb-2" type="text" name="companyName" id="companyName"placeholder="Company Name">
           <input type="text" class="form-control" name="companyId" id="companyId" placeholder="Company ID">
        <input class="form-control mb-2" type="password" name="companyPassword"id="companyPassword" placeholder="Password">
        <select class="form-control form-select mb-2" name="companyCategory" id="category">
            <option selected>Select Category</option>
            <option value="CS/IT">CS/IT</option>
            <option value="Sales/Consultancy">Sales/Consultancy</option>
            <option value="Edutech">Edutech</option>
            <option value="Core">Core</option>
        </select>
        <textarea class="form-control" name="companyDescription" id="companyDescription" cols="30" rows="10" placeholder="Enter description of the company"></textarea>
        <p class="card-text mt-2 mb-2">Enter elegibility details</p>
        <div id="eligibility">
          <input class="form-control" name="elegField1" type="text" id="field" placeholder="Enter field">
          <input class="form-control" name="elegThreshold1" type="text" id="threshold" placeholder="Enter eligibility threshold">
        </div>
         <a
          class="my-3 mx-auto btn btn-sm btn-primary"
          href="#!"
          id="add-field"
          >Add field</a
        >
        <input type="text" name="estimateOffer" id="companyOffer" placeholder="Estimated offer" class="form-control">
        <input class="form-control mb-2" type="email" name="companyEmail" id="companyEmail" placeholder="Email">
        <input class="form-control mb-2" type="phone" name="companyPhone" id="companyPhone" placeholder="Phone">
        <input
          class="btn btn-lg btn-secondary d-block mx-auto my-4"
          type="submit"
          value="Submit"
        />
      </form>
    </div>
    <footer
      class="text-center text-white mt-4"
      style="background-color: #f1f1f1"
    >
      <!-- Copyright -->
      <div
        class="text-center text-dark p-3"
        style="background-color: rgba(0, 0, 0, 0.2)"
      >
        Â© 2022 Copyright:
        <a class="text-dark" href="#!">Dewesh Jha</a>
      </div>
      <!-- Copyright -->
    </footer>
  </body>
</html>

